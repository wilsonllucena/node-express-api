{
  "name": "node-express-api",
  "version": "1.0.0",
  "description": "NodeJs typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/main.js",
    "start:dev": "ts-node-dev --transpile-only src/main.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test:staged": "npm test --findRelatedTests",
    "test:ci": "npm test --coverage",
    "test:e2e": "jest --projects ./test --forceExit --runInBand",
    "test:unit": "jest",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Wilson Lucena",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "axios": "^1.2.2",
    "body-parser": "^1.20.1",
    "config": "^3.3.8",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jest": "^29.3.1",
    "module-alias": "^2.2.2",
    "pino": "^8.8.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/mocha": "^10.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.18",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
