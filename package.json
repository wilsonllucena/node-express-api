{
  "name": "node-express-api",
  "version": "1.0.0",
  "description": "NodeJs typescript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/main.js",
    "start:dev": "ts-node-dev  -r tsconfig-paths/register --inspect --ignore-watch node_modules --transpile-only src/main.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test:staged": "npm test -c --findRelatedTests",
    "test:ci": "npm test --coverage",
    "test:unit": "npm test",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand --watchAll "
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Wilson Lucena",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "axios": "^1.2.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.1",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jest": "^29.3.1",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "pino": "^8.8.0",
    "pino-http": "^8.3.1",
    "reflect-metadata": "^0.1.13",
    "sinon": "^15.0.1",
    "tsconfig-paths": "^4.1.2",
    "tsyringe": "^4.7.0"
  },
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/mocha": "^10.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.11.18",
    "@types/pino": "^7.0.5",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "git-commit-msg-linter": "^4.5.0",
    "husky": "^8.0.3",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.1.0",
    "pino-pretty": "^9.1.1",
    "prisma": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
